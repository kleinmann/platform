<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Shopware\Core\Framework\Workflow\ActionProvider">
            <argument type="tagged" tag="workflow.action"/>
        </service>

        <service id="Shopware\Core\Framework\Workflow\Action\SlackAction">
            <argument type="service" id="Shopware\Core\Framework\Twig\StringTemplateRenderer"/>
            <argument type="service" id="validator"/>
            <tag name="workflow.action"/>
        </service>

        <service id="Shopware\Core\Framework\Workflow\Action\WebhookAction">
            <argument type="service" id="Shopware\Core\Framework\Twig\StringTemplateRenderer"/>
            <argument type="service" id="validator"/>
            <tag name="workflow.action"/>
        </service>

        <service id="Shopware\Core\Framework\Workflow\WorkflowService">
            <argument type="service" id="workflow.repository"/>
            <argument type="service" id="Shopware\Core\Framework\Workflow\ActionProvider"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="Shopware\Core\Framework\Workflow\Subscriber\WorkflowTriggerSubscriber">
            <argument type="service" id="Shopware\Core\Framework\Workflow\WorkflowService"/>
            <argument type="service" id="customer.repository"/>
            <argument type="service" id="order.repository"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
