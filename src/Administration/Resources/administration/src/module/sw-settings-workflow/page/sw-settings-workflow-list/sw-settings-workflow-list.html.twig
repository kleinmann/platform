{% block sw_settings_list %}
    {% block sw_settings_workflow_index %}
        <sw-page class="sw-settings-workflow-list">
            <template slot="smart-bar-actions">
                <sw-button variant="primary" :routerLink="{ name: 'sw.settings.workflow.create' }">
                    {{ $tc('sw-settings-workflow.list.buttonAddWorkflow') }}
                </sw-button>
            </template>

            <template slot="content">
                <sw-entity-listing
                    v-if="workflows"
                    :items="workflows"
                    :repository="repository"
                    :columns="columns"
                    detailRoute="sw.settings.workflow.detail">
                </sw-entity-listing>
            </template>
        </sw-page>
    {% endblock %}
{% endblock %}
